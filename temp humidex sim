#tempa nd humidity sensor simulator
#include <LiquidCrystal.h>

LiquidCrystal lcd(7, 8, 9, 10, 11, 12); // RS, E, D4–D7

void setup() {
  Serial.begin(9600);
  lcd.begin(16, 2);
  lcd.print("Simulating DHT11...");
}

void loop() {
  delay(2000); // mimic sensor delay

  // Simulated values
  float t = random(200, 300) / 10.0;  // 20.0°C – 30.0°C
  float h = random(300, 700) / 10.0;  // 30% – 70%

  // Display on LCD
  lcd.clear();
  lcd.setCursor(0, 0);
  lcd.print("Temp: ");
  lcd.print(t, 1);
  lcd.print((char)223);  // degree symbol
  lcd.print("C");

  lcd.setCursor(0, 1);
  lcd.print("Humidity: ");
  lcd.print(h, 0);
  lcd.print("%");

  // Print to Serial Monitor
  Serial.print("Simulated Temp: "); Serial.print(t);
  Serial.print(" °C, Humidity: "); Serial.print(h); Serial.println(" %");
}
